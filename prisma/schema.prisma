// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Order {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  firstName   String
  lastName    String
  email       String
  phoneNumber String
  tshirt_size TShirtType
  status      OrderStatus
}

model Event {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  eventName String
  price     Int
}

enum OrderStatus {
  SUCCESS
  FAILED
}

enum TShirtType {
  S
  M
  L
  XL
  XXL
  XXXL
}
